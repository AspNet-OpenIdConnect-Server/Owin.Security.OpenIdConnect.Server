@using System.Security.Claims
@model string

<div class="jumbotron">
    @if (!string.IsNullOrWhiteSpace(Model)) {
        <h1>Welcome, @Model</h1>
        <a class="btn btn-lg btn-danger" href="/signout">Sign out</a>
    }

    else {
        <h1>Welcome, anonymous</h1>
        <a class="btn btn-lg btn-success" href="/signin">Sign in</a>
    }
</div>