@using Nancy.Server.Models
@using Nancy.ViewEngines.Razor
@using Owin.Security.OpenIdConnect.Server.Messages

@inherits NancyRazorViewBase<Tuple<AuthorizeEndpointRequest, Application>>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <form action="/oauth2/authorize" enctype="application/x-www-form-urlencoded" method="post">
            @Html.AntiForgeryToken()

            @foreach (var parameter in Model.Item1.Parameters) {
                <input type="hidden" name="@parameter.Key" value="@Model.Item1.Parameters.Get(parameter.Key)" />
            }

            Do you wanna authorize @Model.Item2.DisplayName?
            <input type="submit" />
        </form>
    </div>
</body>
</html>
